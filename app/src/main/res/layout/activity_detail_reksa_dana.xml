<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_palette"
    tools:context=".ui.basenavigation.products.detail.reksadana.detailreksadana.DetailReksaDanaActivity">

    <include
        android:id="@+id/include8"
        layout="@layout/toolbar_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_for_0dp"
        app:layout_constraintBottom_toTopOf="@+id/include7"
        app:layout_constraintTop_toBottomOf="@+id/include8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name_detail_reksa_dana"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/size_for_20dp"
                android:layout_marginEnd="@dimen/size_for_20dp"
                android:gravity="center_vertical"
                android:textColor="@color/dove_gray_palette"
                android:textSize="@dimen/size_for_17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/ll_01"
                app:layout_constraintEnd_toStartOf="@id/ll_01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ll_01"
                tools:text="Ashmore Dana Ekuitas Nusantara" />

            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_for_10dp"
                android:layout_marginEnd="@dimen/size_for_20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_date_detail_reksa_dana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="16/12/2020" />

                <TextView
                    android:id="@+id/tv_price_detail_reksa_dana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="Rp 1.462,81\nNAB/Unit" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_for_20dp"
                android:background="@color/wild_sand_palette"
                android:padding="@dimen/size_for_20dp"
                android:text="@string/kinerja_produk"
                android:textAllCaps="true"
                android:textColor="@color/gray_palette"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_01" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_kinerja_produk_detail_reksa_dana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_for_10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_06" />

            <TextView
                android:id="@+id/tv_07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_for_20dp"
                android:background="@color/wild_sand_palette"
                android:padding="@dimen/size_for_20dp"
                android:text="@string/product_information"
                android:textAllCaps="true"
                android:textColor="@color/gray_palette"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_kinerja_produk_detail_reksa_dana" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_information_product_detail_reksa_dana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_07" />

            <TextView
                android:id="@+id/tv_08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_for_20dp"
                android:background="@color/wild_sand_palette"
                android:padding="@dimen/size_for_20dp"
                android:text="@string/additional_information"
                android:textAllCaps="true"
                android:textColor="@color/gray_palette"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_information_product_detail_reksa_dana" />

            <include
                layout="@layout/custom_additional_information_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_08" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/include7"
        layout="@layout/custom_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_buy_reksa_dana_detail" />

    <Button
        android:id="@+id/btn_buy_reksa_dana_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:text="@string/buy"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>