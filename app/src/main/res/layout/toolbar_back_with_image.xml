<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_back"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_for_toolbar"
    android:background="@color/color_base_welma">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/img_btn_back_toolbar_with_image"
            android:layout_width="@dimen/size_for_30dp"
            android:layout_height="@dimen/size_for_30dp"
            android:background="@drawable/ic_back_white"
            android:padding="@dimen/size_for_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_toolbar_back_with_image"
            style="@style/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/product" />

        <ImageButton
            android:id="@+id/img_btn_action_toolbar_back_with_image"
            android:layout_width="@dimen/size_for_25dp"
            android:layout_height="@dimen/size_for_25dp"
            android:layout_marginEnd="@dimen/size_for_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/ic_download" />

        <ImageView
            android:id="@+id/iv_red_dot_toolbar_back_with_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/img_btn_action_toolbar_back_with_image"
            app:layout_constraintTop_toTopOf="@id/img_btn_action_toolbar_back_with_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>