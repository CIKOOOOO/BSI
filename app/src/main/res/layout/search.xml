<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wild_sand_palette"
    android:paddingTop="@dimen/size_for_5dp"
    android:paddingBottom="@dimen/size_for_5dp">

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="@dimen/size_for_30dp"
        android:layout_height="@dimen/size_for_30dp"
        android:layout_marginStart="@dimen/size_for_20dp"
        android:background="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toBottomOf="@id/et_input_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_input_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/search"
        android:inputType="text"
        android:padding="@dimen/size_for_10dp"
        android:textColorHint="@color/gray_palette"
        app:layout_constraintEnd_toStartOf="@id/img_btn_filter_search"
        app:layout_constraintStart_toEndOf="@id/img_search"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_filter_search"
        android:layout_width="@dimen/size_for_30dp"
        android:layout_height="@dimen/size_for_30dp"
        android:layout_marginEnd="@dimen/size_for_20dp"
        android:background="@drawable/ic_filter_gray"
        app:layout_constraintBottom_toBottomOf="@id/et_input_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>