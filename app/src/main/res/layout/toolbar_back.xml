<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_back"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_for_toolbar"
    android:background="@color/color_base_welma">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/img_btn_back_toolbar"
            android:layout_width="@dimen/size_for_30dp"
            android:layout_height="@dimen/size_for_30dp"
            android:background="@drawable/ic_back_white"
            android:padding="@dimen/size_for_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/size_for_20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title_toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_for_10dp"
                tools:text="@string/product"
                style="@style/TitleTextView"/>

            <TextView
                android:id="@+id/tv_child_toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_for_10dp"
                tools:text="Reksa Dana"
                android:textColor="@color/white_palette"
                android:textSize="@dimen/size_for_12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_toolbar_back" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>