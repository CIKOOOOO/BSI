<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_for_10dp"
    android:layout_marginTop="@dimen/size_for_30dp"
    android:layout_marginEnd="@dimen/size_for_10dp">

    <TextView
        android:id="@+id/recycler_tv_title_promo_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_for_5dp"
        android:textColor="@color/java_palette"
        android:textSize="@dimen/size_for_20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cashback hingga 300 ribu di Promo Leave Contact Asuransi via Welma" />

    <ImageView
        android:id="@+id/recycler_img_promo_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_for_200dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_tv_title_promo_news" />

    <TextView
        android:id="@+id/recycler_tv_date_promo_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_for_5dp"
        android:drawablePadding="@dimen/size_for_10dp"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_baseline_access_time_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_img_promo_news"
        tools:text="11 Nov 2020 - 31 Dec 2020" />

    <TextView
        android:id="@+id/recycler_tv_description_promo_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_for_5dp"
        android:layout_marginTop="@dimen/size_for_10dp"
        android:textSize="@dimen/size_for_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_tv_date_promo_news"
        tools:text="#PasangKudaKuda tanpa keluar rumah, dapat cashback hingga Rp300 ribu" />
</androidx.constraintlayout.widget.ConstraintLayout>