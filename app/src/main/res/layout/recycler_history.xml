<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_palette">

    <TextView
        android:id="@+id/tv_reksadana_name_h"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_for_20dp"
        android:text="Bahana Pendapatan Tetap Makara Prima"
        android:layout_marginTop="@dimen/size_for_5dp"
        android:textColor="@color/java_palette"
        android:textSize="@dimen/size_for_17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/berhasil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_jenis_transaksi_h" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                     Berhasil"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/size_for_20dp"
        android:textSize="@dimen/size_for_15sp"
        app:layout_constraintTop_toTopOf="@id/tv_reksadana_name_h"
        android:textColor="@color/pastel_green_palette"
        android:id="@+id/berhasil"/>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="100.000"
    android:id="@+id/tv_cost_h"
    app:layout_constraintEnd_toEndOf="@id/berhasil"
    app:layout_constraintTop_toBottomOf="@id/berhasil"
    android:layout_marginTop="@dimen/size_for_5dp"
    android:textSize="@dimen/size_for_15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rp"
        app:layout_constraintEnd_toStartOf="@id/tv_cost_h"
        android:text="Rp. "
        android:textSize="@dimen/size_for_15sp"
        app:layout_constraintTop_toTopOf="@id/tv_cost_h"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_for_15sp"
        android:id="@+id/unit"
        android:text=" Unit"
        app:layout_constraintTop_toBottomOf="@id/tv_cost_h"
        app:layout_constraintEnd_toEndOf="@id/tv_cost_h"
        android:layout_marginTop="@dimen/size_for_5dp"
        android:textColor="@color/java_palette"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_unit_h"
        app:layout_constraintEnd_toStartOf="@id/unit"
        android:text="32,3552"
        android:textColor="@color/java_palette"
        android:textSize="@dimen/size_for_15sp"
        app:layout_constraintTop_toTopOf="@id/unit"/>



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pembelian"
    android:id="@+id/tv_jenis_transaksi_h"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="@dimen/size_for_10dp"
    android:layout_marginStart="@dimen/size_for_20dp"
    android:textSize="@dimen/size_for_15sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_date_range_24"
        android:scaleY="0.6"
        android:scaleX="0.6"
        app:layout_constraintTop_toBottomOf="@id/tv_reksadana_name_h"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/size_for_5dp"
        android:id="@+id/calendar_logo_i"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/12/2020"
        app:layout_constraintStart_toEndOf="@id/calendar_logo_i"
        app:layout_constraintTop_toTopOf="@id/calendar_logo_i"
        android:id="@+id/date_h"/>

    <TextView
        android:id="@+id/tv_share_h"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:textSize="@dimen/size_for_15sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_for_10dp"
        android:layout_marginBottom="@dimen/size_for_20dp"
        android:background="@drawable/rectangle_rounded_orange_light_5dp"
        android:drawablePadding="@dimen/size_for_10dp"
        android:paddingStart="@dimen/size_for_10dp"
        android:paddingTop="@dimen/size_for_5dp"
        android:paddingEnd="@dimen/size_for_10dp"
        android:paddingBottom="@dimen/size_for_5dp"
        android:text="Share"
        android:textColor="@color/black_palette"
        app:drawableEndCompat="@drawable/ic_share_black"
        app:layout_constraintTop_toBottomOf="@id/unit"
        app:layout_constraintEnd_toEndOf="@id/unit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_share_h"
        android:background="@drawable/line_gray2"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>