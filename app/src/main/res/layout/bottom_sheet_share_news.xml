<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bs_cl_share_news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_top_rounded_white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/size_for_0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_for_20dp"
        android:text="@string/share_news"
        android:textColor="@color/sherpa_blue_palette"
        android:textSize="@dimen/size_for_15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bs_et_content_share_news"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_for_20dp"
        android:layout_marginTop="@dimen/size_for_20dp"
        android:layout_marginEnd="@dimen/size_for_20dp"
        android:background="@drawable/rectangle_stroke_blue_dark"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:padding="@dimen/size_for_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34"
        tools:text="Selamat datang di Indomaret" />

    <Button
        android:id="@+id/bs_btn_share_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_for_20dp"
        android:background="@android:color/holo_orange_light"
        android:text="@string/share"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bs_et_content_share_news" />
</androidx.constraintlayout.widget.ConstraintLayout>