<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_for_40dp"
        android:layout_marginEnd="@dimen/size_for_40dp"
        android:background="@drawable/rectangle_rounded_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_view_close_custom_dialog"
            android:layout_width="@dimen/size_for_70dp"
            android:layout_height="@dimen/size_for_70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_for_20dp"
            android:layout_marginBottom="@dimen/size_for_10dp"
            tools:background="@drawable/ic_close_red" />

        <TextView
            android:id="@+id/tv_info_custom_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="Pastikan koneksi internet stabil" />

        <Button
            android:id="@+id/btn_close_custom_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_for_20dp"
            android:background="@drawable/rectangle_rounded_java"
            android:textColor="@color/white_palette"
            tools:text="Tutup" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>