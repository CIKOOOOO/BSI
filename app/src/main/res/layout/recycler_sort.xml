<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_palette">


    <TextView
        android:id="@+id/tv_sort_jenis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_for_20dp"
        android:layout_marginTop="@dimen/size_for_15dp"
        android:text="Nama Produk"
        android:textColor="@color/gray_filter_text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_checked_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_for_20dp"
        android:src="@drawable/ic_checklist_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sort_order_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_for_20dp"
        android:layout_marginTop="@dimen/size_for_15dp"
        android:layout_marginEnd="@dimen/size_for_10dp"
        android:text="Z"
        android:textColor="@color/gray_filter_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/img_checked_sort"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_arrow_sort"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_sort_order_end"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sort_order_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_for_20dp"
        android:layout_marginTop="@dimen/size_for_15dp"
        android:text="A"
        android:textColor="@color/gray_filter_text"
        android:textSize="18sp"

        app:layout_constraintEnd_toStartOf="@id/img_arrow_sort"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_for_15dp"
        android:background="@drawable/line_gray2"
        app:layout_constraintTop_toBottomOf="@id/tv_sort_jenis" />


</androidx.constraintlayout.widget.ConstraintLayout>