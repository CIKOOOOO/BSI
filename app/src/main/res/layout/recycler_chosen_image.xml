<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_for_150dp"
    android:layout_height="@dimen/size_for_200dp"
    android:layout_marginStart="@dimen/size_for_10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/recycler_img_chosen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_border_color="@color/color_base_welma"
        app:riv_border_width="@dimen/size_for_1dp"
        app:riv_mutate_background="true" />

    <ImageButton
        android:id="@+id/recycler_img_btn_close_img_chosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/aqua_squeeze_palette"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>