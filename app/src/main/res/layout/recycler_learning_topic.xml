<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_for_20dp"
    android:layout_marginTop="@dimen/size_for_10dp"
    android:layout_marginEnd="@dimen/size_for_20dp"
    android:background="@android:color/white"
    app:cardCornerRadius="@dimen/size_for_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_for_20dp"
        android:layout_marginTop="@dimen/size_for_20dp"
        android:layout_marginBottom="@dimen/size_for_20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recycler_tv_title_learning_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/java_palette"
                    android:textSize="@dimen/size_for_20sp"
                    android:textStyle="bold"
                    tools:text="Reksa Dana" />

                <TextView
                    android:id="@+id/recycler_tv_description_learning_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_palette"
                    tools:text="Investasi Dana Terjangkau" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/recycler_img_learning_topic"
                    android:layout_width="@dimen/size_for_120dp"
                    android:layout_height="@dimen/size_for_100dp"
                    tools:background="@drawable/img_asset_reksa_dana" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_for_10dp">

            <TextView
                android:id="@+id/recyler_btn_pelajari_lebih_lanjut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_black_squeeze"
                android:paddingStart="@dimen/size_for_20dp"
                android:paddingTop="@dimen/size_for_10dp"
                android:paddingEnd="@dimen/size_for_10dp"
                android:paddingBottom="@dimen/size_for_10dp"
                android:text="@string/pelajari_lebih_lanjut"
                android:textAllCaps="false"
                android:textColor="@color/keppel_palette"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>